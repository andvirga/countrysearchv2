{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": ["off", "always"],
        "no-plusplus":  ["off", "always"],
        "react/jsx-filename-extension":  ["off", "always"],
        "import/prefer-default-export":  ["off", "always"],
        "react/forbid-prop-types":  ["off", "always"]
    }
}